<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@android:color/white"
    tools:context="in.karanpurohit.paster.MainActivity">

    <in.karanpurohit.paster.CustomViews.EditTextHelveticaNormal
        style="@style/inputBox"
        android:id="@+id/etIp"
        android:gravity="center"
        android:layout_centerInParent="true"
        android:hint="Please enter the IP of your computer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number|text"
        android:maxLines="1"/>
    <in.karanpurohit.paster.CustomViews.ButtonHelveticaNormal
        android:layout_marginTop="20dp"
        style="@style/keypadbuttonstyle"
        android:id="@+id/btnConnect"
        android:onClick="connect"
        android:padding="10dp"
        android:text="connect"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/etIp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <in.karanpurohit.paster.CustomViews.TextViewHelveticalThin
            android:id="@+id/tvInstructions"
            android:layout_marginRight="45dp"
            android:text="Instructions"
            android:textSize="18dp"
            android:onClick="showInstructions"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <in.karanpurohit.paster.CustomViews.TextViewHelveticalThin
            android:id="@+id/tvAboutUs"
            android:onClick="showAboutUs"
            android:text="About us"
            android:textSize="18dp"
            android:layout_width="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_height="wrap_content" />
        </LinearLayout>
</RelativeLayout>
